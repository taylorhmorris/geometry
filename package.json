{
  "name": "@taylorhmorris/geometry",
  "version": "0.0.9",
  "description": "A simple geometry package",
  "main": "./dist/index.umd.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "vite build",
    "build:docs": "typedoc src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "npm run lint-only && npm run format",
    "lint:check": "npm run lint-only -- --no-fix && npm run format -- --check",
    "lint-only": "eslint",
    "format": "prettier --write \"src/**/*.ts\"",
    "coverage": "vitest run --coverage",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tmorris42/geometry.git"
  },
  "author": "Taylor H. Morris",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^22.5.0",
    "@vitest/coverage-v8": "^2.0.5",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.3.3",
    "typedoc": "^0.26.6",
    "typescript": "^5.5.4",
    "vite": "^5.4.2",
    "vite-plugin-dts": "^4.0.3",
    "vitest": "^2.0.5"
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.umd.cjs"
    }
  }
}
