{
  "name": "@taylorhmorris/geometry",
  "version": "0.0.11",
  "description": "A simple geometry package",
  "main": "./dist/index.umd.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "vite build",
    "build:docs": "typedoc src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "npm run lint-only && npm run format",
    "lint:check": "npm run lint-only -- --no-fix && npm run format -- --check",
    "lint-only": "eslint \"src/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "coverage": "vitest run --coverage",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/taylorhmorris/geometry.git"
  },
  "author": "Taylor H. Morris",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@types/node": "^22.13.10",
    "@vitest/coverage-v8": "^3.0.8",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "globals": "^16.0.0",
    "prettier": "^3.5.3",
    "typedoc": "^0.28.0",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.1",
    "vite": "^6.2.2",
    "vite-plugin-dts": "^4.5.3",
    "vitest": "^3.0.8"
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.umd.cjs"
    }
  },
  "dependencies": {
    "@eslint/compat": "^1.2.7"
  }
}
