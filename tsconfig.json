{
  "include": ["./src/**/*.ts"],
  "exclude": ["./node_modules", "**/__test__/*", "./coverage", "./docs"],
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "declaration": true,
    "esModuleInterop": true,
    "strict": true,
    "lib": ["es6"],
    "sourceMap": true,
    "outDir": "./dist",
    "skipLibCheck": true,
  }
}
