{
  "include": ["./src/**/*.ts"],
  "exclude": ["./node_modules", "**/__test__/*", "./coverage", "./docs"],
  "compilerOptions": {
    "target": "es6",
    "module": "ES6",
    "declaration": true,
    "esModuleInterop": true,
    "strict": true,
    "lib": ["es6"],
    "sourceMap": true,
    "outDir": "./lib",                                   /* Specify an output folder for all emitted files. */
  }
}
